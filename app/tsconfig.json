{
    "compilerOptions": {
        "sourceMap": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "target": "es6",
        "lib": [
            "es6",
            "dom",
            "scripthost"
        ],
        "module": "commonjs",
        "types": [
            "webpack-env",
            "core-js",
            "node"
        ],
        "strict": true,
        "baseUrl": "..",
        "paths": {
            "@common/*": [
                "./common/*"
            ],
            "@app/*": [
                "./app/*"
            ]
        }
    }
}