{
    "compilerOptions": {
        "outDir": "../dist",
        "sourceMap": true,
        "experimentalDecorators": true,
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "types": [
            "webpack-env",
            "node"
        ],
        "strict": true,
        "allowJs": true,
        "baseUrl": "..",
        "paths": {
            "@common/*": [
                "./common/*"
            ],
            "@app/*": [
                "./app/*"
            ]
        }
    },
    "include": [
        "./**/*.ts"
    ]
}