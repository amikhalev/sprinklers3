{
    "compilerOptions": {
        "outDir": "../dist/common",
        "experimentalDecorators": true,
        "target": "es2017",
        "lib": [
            "es2017"
        ],
        "types": [
            "node"
        ],
        "module": "commonjs",
        "strict": true,
        "baseUrl": "..",
        "composite": true,
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "paths": {
            "@common/*": [
                "./common/*"
            ]
        }
    },
    "include": [
        "./**/*.ts"
    ]
}