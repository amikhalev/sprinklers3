{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es6",
        "lib": [
            "es6"
        ],
        "types": [
            "node"
        ],
        "module": "commonjs",
        "strict": true,
        "allowJs": true,
        "baseUrl": "..",
        "sourceMap": true,
        "paths": {
            "@common/*": [
                "./common/*"
            ],
            "@app/*": [
                "./app/*"
            ]
        }
    },
    "include": [
        "./**/*.ts"
    ]
}