{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "sourceMap": true,
        "jsx": "react",
        "lib": [
            "es2017",
            "dom",
            "scripthost"
        ],
        "types": [
            "webpack-env",
            "core-js",
            "node"
        ],
        "baseUrl": "..",
        "paths": {
            "@common/*": [
                "./common/*"
            ],
            "@client/*": [
                "./client/*"
            ]
        }
    },
    "include": [
        "./client/**/*.ts",
        "./client/**/*.tsx"
    ],
    "references": [{
        "path": "../common"
    }]
}